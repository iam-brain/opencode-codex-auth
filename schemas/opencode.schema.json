{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.iam-brain.dev/opencode-codex-auth/opencode.schema.json",
  "title": "OpenCode Config (Plugin Focused)",
  "description": "Schema for ~/.config/opencode/opencode.json with plugin registration guidance.",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "plugin": {
      "type": "array",
      "description": "Include @iam-brain/opencode-codex-auth@latest to enable this plugin.",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  },
  "examples": [
    {
      "plugin": ["@iam-brain/opencode-codex-auth@latest"]
    }
  ]
}
