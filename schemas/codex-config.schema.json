{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.iam-brain.dev/opencode-codex-auth/codex-config.schema.json",
  "title": "OpenCode Codex Auth Config",
  "description": "Schema for ~/.config/opencode/codex-config.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "debug": {
      "type": "boolean"
    },
    "quiet": {
      "type": "boolean"
    },
    "refreshAhead": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "bufferMs": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "runtime": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["native", "codex"]
        },
        "rotationStrategy": {
          "type": "string",
          "enum": ["sticky", "hybrid", "round_robin"]
        },
        "sanitizeInputs": {
          "type": "boolean"
        },
        "developerMessagesToUser": {
          "type": "boolean"
        },
        "codexCompactionOverride": {
          "type": "boolean"
        },
        "headerSnapshots": {
          "type": "boolean"
        },
        "headerTransformDebug": {
          "type": "boolean"
        },
        "pidOffset": {
          "type": "boolean"
        }
      }
    },
    "global": {
      "$ref": "#/$defs/modelBehavior"
    },
    "perModel": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/modelConfig"
      }
    }
  },
  "$defs": {
    "personality": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!.*(?:\\.\\.|/|\\\\)).+$"
    },
    "modelBehavior": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "personality": {
          "$ref": "#/$defs/personality"
        },
        "thinkingSummaries": {
          "type": "boolean"
        },
        "verbosityEnabled": {
          "type": "boolean"
        },
        "verbosity": {
          "type": "string",
          "enum": ["default", "low", "medium", "high"]
        }
      }
    },
    "modelConfig": {
      "allOf": [
        {
          "$ref": "#/$defs/modelBehavior"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "personality": {
              "$ref": "#/$defs/personality"
            },
            "thinkingSummaries": {
              "type": "boolean"
            },
            "verbosityEnabled": {
              "type": "boolean"
            },
            "verbosity": {
              "type": "string",
              "enum": ["default", "low", "medium", "high"]
            },
            "variants": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/$defs/modelBehavior"
              }
            }
          }
        }
      ]
    }
  }
}
