{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node", "vitest/globals"],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false
  },
  "include": ["test/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.mjs"]
}
